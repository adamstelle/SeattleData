<main id="hood">
  {{#if currentYear}}
  <h1 class="question">Whats going on in <span class="blue">your</span> neighborhood?</h1>
  <form method="POST" action="/address?form=useraddress">
    <input type="text" name="address" placeholder="Enter your address to find out." class="addressFormat prefix-20 grid-60 form-control" id="address">
    <input type="submit" value="Submit" id="addressSubmit" class="btn btn-primary addressFormat">
  </form>
  {{/if}}
  {{#if data}}
  <div id="nav" class="grid-100">
    <a class="btn btn-primary" id="service" type="submit" href="./hood">Check a different Address</a>
  </div>
  <div class="grid-70">
    <h1 class="title">Neighborhood Crime Report</h1>
    <h2>Last month's crime results for <span class="boldblue percent">  {{{data.subhood.subhood}}}, {{{data.subhood.hood}}} </span> </h2>
  </div>
  <div class="grid-30 mobile-grid-100">
    {{{logo}}}
  </div>
  <div class="selectDates grid-100">
    <h3>In the last 30 days there have been <span class="boldblue percent"> {{{data.subhood.numIncidents}}} </span> incidents in your neighborhood.</h3>
  </div>
  <div id="results" class="grid-100">
  <div id="total"></div><br>
  <div id="place1" class="grid-35 suffix-10"><span class="resultTitle"></span><br><span class="percent"></span><br><span class="totals"></span></div>
  <div class="grid-55">
    <div id="place2" class="resultBlock grid-50"><span class="resultTitle"></span><br><span class="percent"></span><br><span class="totals"></span></div>
    <div id="place3" class="resultBlock grid-50"><span class="resultTitle"></span><br><span class="percent"></span><br><span class="totals"></span></div>
    <div id="place4" class="resultBlock grid-50"><span class="resultTitle"></span><br><span class="percent"></span><br><span class="totals"></span></div>
    <div id="place5" class="resultBlock grid-50"><span class="resultTitle"></span><br><span class="percent"></span><br><span class="totals"></span></div>
  </div>
  </div>
    <p>{{{data.subhood.sortedIncidents.[0].name}}}</p>
    <p>{{{data.subhood.sortedIncidents.[0].number}}}</p>
    <p>{{{data.subhood.sortedIncidents.[1].name}}}</p>
    <p>{{{data.subhood.sortedIncidents.[1].number}}}</p>
    <p>{{{data.subhood.sortedIncidents.[2].name}}}</p>
    <p>{{{data.subhood.sortedIncidents.[2].number}}}</p>
    <p>{{{data.subhood.numIncidents}}}</p>
    <p>{{{data.subhood.numVariance}}}</p>
    <p>{{{data.subhood.percentVariance}}}</p>
  {{/if}}
  {{> map}}
</main>
